provides "connections"

connections Mash.new
connections_file = "<%= File.join(node['connections']['connections_log_dir'],node['connections']['connections_log_file']) %>"

if File.exists?(connections_file) then
  File.open(connections_file).each do |line|
    next if line =~ /^LOCALIP/
    line.chomp!
    ( localip, locallistenport, foreignip, remoteport, protocol, count, lastseen ) = line.split("\t")
    key = localip + ":" + locallistenport + "-" + foreignip + ":" + remoteport
    connections[key] = Mash.new
    connections[key][:proto] = protocol
    connections[key][:count] = count
    connections[key][:lastseen] = lastseen
    connections[key][:foreignip] = foreignip
    connections[key][:localip] = localip
    connections[key][:locallistenport] = locallistenport
    connections[key][:remoteport] = remoteport
  end
end
